@model TTCM_RestaurentManager.Models.DatBan
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "BookTables";
    Layout = "~/Views/Shared/_LayoutBookCustomer.cshtml";
}
        <form method="post" asp-action="BookTables">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <input asp-for="HoTen" class="form-control" placeholder="Your Name" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>

            <div>
                <input asp-for="SoDienThoai" class="form-control" placeholder="Phone Number" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>

            <div>
                <input asp-for="Email" class="form-control" type="email" placeholder="Your Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div>
                <input asp-for="NgayDatBan" class="form-control" type="date" />
                <span asp-validation-for="NgayDatBan" class="text-danger"></span>
            </div>

            <div>
                <select asp-for="SoLuongNguoi" class="form-control nice-select wide">
                    <option value="" disabled selected>
                        How many persons?
                    </option>
                    <option value="2">
                        2
                    </option>
                    <option value="3">
                        3
                    </option>
                    <option value="4">
                        4
                    </option>
                    <option value="5">
                        5
                    </option>
                </select>
                <span asp-validation-for="SoLuongNguoi" class="text-danger"></span>
            </div>

            <div>
                <input asp-for="GhiChu" class="form-control" placeholder="Note" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>

            <div class="btn_box">
                <button type ="submit" >
                    Book Now
                </button> 
            </div>
        </form>



