                <label asp-for="SoLuongNguoi" class="control-label"><p>Số lượng người</p></label>
                <input asp-for="SoLuongNguoi" class="form-control" />
                <span asp-validation-for="SoLuongNguoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label"><p>Ghi chú</p></label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="listTable">Back to List</a>
</div>

